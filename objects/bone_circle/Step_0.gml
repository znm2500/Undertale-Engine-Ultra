if (enable == 1) 
{
    rott += rot;
    
    for (i = 0; i < (number + 1); i += 1)
    {
        if (point == 1)
        {
            bone[i].angle = point_direction(bone[i].x, bone[i].y, x, y) + extra_angle;
        }
        else if (point == 0 && roting == 1)
        {
            bone[i].angle = (rott + (angle * i)) + extra_angle;
        }
        else
        {
            bone[i].angle = ((angle * i) + extra_angle);
        }
        
        bone[i].x = x + lengthdir_x(size_x, ((angle * i) + rott));
        bone[i].y = y + lengthdir_y(size_y, ((angle * i) + rott));
        bone[i].out = out;
        bone[i].length = length;
        bone[i].type = type;
    }
}